<section id="user-edit">
  <%= form_for(@user, :url => admin_users_path) do |f| %>
  <div id="user-box">

    <div class="avator"> <a href="#">上傳圖片</a> <img src="/images/avator.jpg"> </div>
    <div class="form">
      <div class="text">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="30%" align="center">帳號</td>
            <td width="70%"><%= f.email_field :email, :autocomplete => "off" %></td>
          </tr>
        </table>
      </div>
      <div class="text">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="30%" align="center">名稱</td>
            <td width="70%"><%= f.text_field :username, :autocomplete => "off" %></td>
          </tr>
        </table>
      </div>
      <div class="text">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="30%" align="center">密碼</td>
            <td width="70%"><%= f.password_field :password, :autocomplete => "off" %></td>
          </tr>
        </table>
      </div>
      <div class="text">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="30%" align="center">確認密碼</td>
            <td width="70%"><%= f.password_field :password_confirmation %></td>
          </tr>
        </table>
      </div>
      <div class="submit"> <a href="<%= admin_users_path %>">取消</a><a href="#" id="submit-save">儲存</a> </div>
    </div>
    <!--form--> 
  </div>
  <% end %>
</section>
<script type="text/javascript">
$("#submit-save").click(function(){
  $("#new_user").submit();
});
</script>